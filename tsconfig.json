{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es2015",
    "noImplicitAny": false,
    "outDir": "./dist",
    "target": "es5",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "model/*": ["model/*"],
      "assets/*": ["assets/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
